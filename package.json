{
    "bin": {"brokk": "jdeploy-bundle/jdeploy.js"},
    "author": "Brokk Team",
    "description": "AI for large codebases. Brokk is a tool that helps you understand and navigate large codebases using AI.",
    "main": "index.js",
    "preferGlobal": true,
    "homepage": "https://brokk.ai",
    "repository": "https://github.com/BrokkAi/brokk",
    "version": "1.0.0",
    "jdeploy": {
        "jdk": false,
        "jdkProvider": "jbr",
        "args": [],
        "fallbackToUniversal": false,
        "configFileMac": "{{ path(user.home, \"Library\", \"Application Support\", \"Brokk\", \"jdeploy.json\") }}",
        "configFileWin": "{{ path(env.APPDATA ?? path(user.home, \"AppData\", \"Roaming\"), \"Brokk\", \"jdeploy.json\") }}",
        "configFileLinux": "{{ path(env.XDG_CONFIG_HOME ?? path(user.home, \".config\"), \"Brokk\", \"jdeploy.json\") }}",
        "publishTargets": [{
            "name": "github: brokk",
            "type": "GITHUB",
            "url": "https://github.com/shannah/brokk"
        }],
        "javaVersion": "21",
        "permissions": [
            {
                "name": "user_notifications",
                "description": "This app requests permission to send notifications to notification center"
            },
            {
                "name": "microphone",
                "description": "Microphone permissions are required for transcribing prompts."
            }
        ],
        "documentTypes": [{
            "role": "Editor",
            "description": "Open folder as Brokk project",
            "type": "directory"
        }],
        "jar": "app/build/libs/brokk-*.jar",
        "javafx": true,
        "title": "Brokk",
        "downloadPage": {"platforms": [
            "debian-arm64",
            "mac-arm64",
            "linux-x64",
            "windows-x64",
            "mac-high-sierra",
            "linux-arm64",
            "debian-x64",
            "mac-x64"
        ]},
        "platformBundlesEnabled": false
    },
    "dependencies": {
        "command-exists-promise": "^2.0.2",
        "node-fetch": "2.6.7",
        "tar": "^4.4.8",
        "yauzl": "^2.10.0",
        "shelljs": "^0.8.4"
    },
    "license": "GPL-3.0-only",
    "name": "brokk",
    "files": ["jdeploy-bundle"],
    "scripts": {"test": "echo \"Error: no test specified\" && exit 1"}
}
